{
  "name": "bbb",
  "version": "0.0.1",
  "description": "Biscoint Buffett (Warren) Bot",
  "author": "Luiz Kill <luikill@gmail.com>",
  "private": true,
  "license": "UNLICENSED",
  "repository": "https://github.com/lzkill/biscoint-buffett-bot.git",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepkg": "npm run build",
    "pkg": "pkg .",
    "prestart": "npm run cpcfg",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:pkg:linux": "NODE_OPTIONS=\"\" ./pkg/bbb-linux",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepare": "husky install",
    "cpcfg": "copyfiles config.json dist/",
    "biscoint": "node test/biscoint.js"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.6",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.6",
    "@nestjs/event-emitter": "^1.0.0",
    "@nestjs/platform-express": "^8.0.6",
    "@nestjs/typeorm": "^8.0.2",
    "better-sqlite3": "^7.4.3",
    "biscoint-api-node": "^1.4.1",
    "bottleneck": "^2.19.5",
    "class-validator": "^0.13.1",
    "humanize-duration": "^3.27.0",
    "load-config-file": "^1.0.8",
    "lodash": "^4.17.21",
    "multikey-map": "^0.2.1",
    "node-emoji": "^1.11.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0",
    "simple-papertrail-logger": "^1.2.4",
    "string-format": "^2.0.0",
    "telegraf": "^4.4.1",
    "trading-signals": "^2.3.0",
    "typeorm": "^0.2.36"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^8.0.6",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "pkg": "^5.3.1",
    "prettier": "^2.2.1",
    "prettier-plugin-organize-imports": "^1.1.1",
    "random-walk": "^1.1.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@bot/(.*)$": "<rootDir>/bot/$1",
      "^@config/(.*)$": "<rootDir>/config/$1",
      "^@shared/(.*)$": "<rootDir>/shared/$1",
      "^@constants$": "<rootDir>/app.constants.ts"
    }
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "outputPath": "pkg"
  },
  "bin": "dist/main.js"
}
